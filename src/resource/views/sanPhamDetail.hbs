    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="card my-4">
                    <div class="card-body px-0 pb-2 ">
                        <form action="/sanPham/{{element._id}}/update?_method=PUT" enctype="multipart/form-data"
                            method="POST">

                            {{#if admin}}
                            <div class="mb-3 mx-5 p-2">
                                <div class="row">
                                    <div class="col-lg-6  text-center mb-3">
                                        <img class="rounded " style="width: 120px; height: 120px;"
                                            src="/{{element.image}}" alt="{{element.name}}" id="img">
                                    </div>
                                    <div class="">
                                        {{!-- <input type="file" class="form-control" name="imageProduct" required
                                            id="file" onchange="loadFile(event)" /> --}}

                                        <input type="file" class="form-control" name="imageProduct" id="file"
                                            value="{{element.image}}" onchange="loadFile(event)" />
                                    </div>
                                </div>
                            </div>
                            <div class="mb-3 mx-5">
                                <label for="exampleInputPassword1" class="form-label">tên sản phẩm</label>
                                <input type="text" class="form-control border border-dark ps-2" name="name"
                                    id="exampleInputPassword1" value="{{element.name}}">
                            </div>
                            <div class="mb-3 mx-5">
                                <label for="exampleInputEmail1" class="form-label">đơn giá</label>
                                <input type="number" class="form-control border border-dark ps-2" name="price"
                                    value="{{element.price}}">
                            </div>
                            <div class="mb-3 mx-5">
                                <label for="exampleInputPassword1" class="form-label">màu sắc</label>
                                <input type="text" class="form-control border border-dark ps-2"
                                    id="exampleInputPassword1" name="color" value="{{element.color}}">
                            </div>
                            <div class="mb-3 mx-5">
                                <label for="exampleInputEmail1" class="form-label">loại hàng</label>
                                <select class="form-select p-lg-2 border border-dark ps-2" name="category"
                                    id="category">
                                    <option value="aoLen" {{select element.category "aoLen" }}>Áo </option>
                                    <option value="quanThun" {{select element.category "quanThun" }}>quần </option>
                                    <option value="giayDa" {{select element.category "giayDa" }}>Giày </option>
                                    <option value="mu" {{select element.category "mu" }}>Mũ </option>
                                    <option value="gangtay" {{select element.category "gangtay" }}>găng tay </option>
                                    <option value="tat" {{select element.category "tat" }}>tất </option>

                                </select>
                            </div>
                            {{else}}
                            <div class="mb-3 mx-5 p-2">
                                <div class="row">
                                    <div class="col-lg-6  text-center mb-3">
                                        <img class="rounded " style="width: 120px; height: 120px;"
                                            src="/{{element.image}}" alt="{{element.name}}" id="img">
                                    </div>
                                </div>
                            </div>
                            <div class="mb-3 mx-5">
                                <label for="exampleInputPassword1" class="form-label">tên sản phẩm</label>
                                <input type="text" class="form-control border border-dark ps-2" name="name"
                                    id="exampleInputPassword1" value="{{element.name}}" disabled>
                            </div>
                            <div class="mb-3 mx-5">
                                <label for="exampleInputEmail1" class="form-label">đơn giá</label>
                                <input type="number" class="form-control border border-dark ps-2" name="price"
                                    value="{{element.price}}" disabled>
                            </div>
                            <div class="mb-3 mx-5">
                                <label for="exampleInputPassword1" class="form-label">màu sắc</label>
                                <input type="text" class="form-control border border-dark ps-2"
                                    id="exampleInputPassword1" name="color" value="{{element.color}}" disabled>
                            </div>
                            <div class="mb-3 mx-5">
                                <label for="exampleInputEmail1" class="form-label">loại hàng</label>
                                <select class="form-select p-lg-2 border border-dark ps-2" name="category"
                                    id="category" disabled>
                                    <option value="aoLen" {{select element.category "aoLen" }}>Áo </option>
                                    <option value="quanThun" {{select element.category "quanThun" }}>quần </option>
                                    <option value="giayDa" {{select element.category "giayDa" }}>Giày </option>
                                    <option value="mu" {{select element.category "mu" }}>Mũ </option>
                                    <option value="gangtay" {{select element.category "gangtay" }}>găng tay </option>
                                    <option value="tat" {{select element.category "tat" }}>tất </option>

                                </select>
                            </div>
                            {{/if}}
