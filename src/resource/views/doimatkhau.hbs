<script>
    const img = document.getElementById("img");
    const loadFile = (event) => {
        img.src = URL.createObjectURL(event.target.files[0]);
    }

    const updatePassword = async (id) => {
        let password = document.getElementById('password').value;
        let passwordNl = document.getElementById('passwordNhapLai').value;
        let passwordN = document.getElementById('passwordNhap').value;

        if (passwordN.trim() === "" || password.trim() === "" || passwordNl.trim() === "") {
            Swal.fire(
                'Thông báo!',
                'Vui lòng nhập đầy đủ thông tin !!',
                'error'
            )
            return;
        } else if (passwordN !== passwordNl) {
            Swal.fire(
                'Thông báo!',
                'Mật khẩu nhập lại không chính xác !!',
                'error'
            )
            return;
        }
        else {
            const response = await fetch('http://localhost:3000/user/account/' + id + "/updatePassword", {
                method: 'POST',
                body: JSON.stringify({ password: password, passwordN: passwordN }),
                headers: {
                    'Content-Type': 'application/json'
                }
            }).then(async (res) => {
                if (res.status === 200) {
                    const json = await res.json();
                   
            Swal.fire({
                    title: 'Thông báo',
                    text: "Đổi mật khẩu thành công",
                    icon: 'success',
                    confirmButtonColor: '#3085d6',
                    confirmButtonText: 'Xác nhận!',
                }).then((result) => {
                    if (result.isConfirmed) {
                          const form = document.getElementById('the-form-id');
                        form.submit();
                    }
                })

               } else if (res.status === 404) {
                    Swal.fire(
                        'Thông báo!',
                        'mật khẩu không chính xác !!',
                        'error'
                    )
                } else if (res.status === 500) {
                    Swal.fire(
                        'Thông báo!',
                        'Đổi mật khẩu thất bại !!',
                        'error'
                    )
                }
            }).catch((error) => alert(error));
        }
    }
</script>